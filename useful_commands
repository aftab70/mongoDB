    "createRole" : "cust", 
    "privileges" : [
        {
            "resource" : {
                "db" : "aftab2", 
                "collection" : ""
            }, 
            "actions" : [
                "insert", 
                "update", 
                "find", 
                "remove"
            ]
        }
    ], 
    "roles" : [

    ]
});
